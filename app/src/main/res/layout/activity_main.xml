<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main">

    <TextView android:text="@string/welcome_user" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/cat1"
        android:layout_toEndOf="@+id/cat1" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Crossfit"
        android:id="@+id/cat1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="75dp"
        android:layout_alignRight="@+id/cat2"
        android:layout_alignEnd="@+id/cat2"
        android:onClick="buttonOnClick" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Functional Training"
        android:id="@+id/cat2"
        android:layout_below="@+id/cat1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonOnClick2"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Ciclismo"
        android:id="@+id/Cat5"
        android:layout_below="@+id/Cat4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonOnClick_no_cat" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Natación"
        android:id="@+id/Cat3"
        android:layout_below="@+id/cat2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonOnClick_no_cat" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Artes Marciales"
        android:id="@+id/Cat4"
        android:layout_below="@+id/Cat3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonOnClick_no_cat" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Deportes"
        android:id="@+id/Cat6"
        android:layout_below="@+id/Cat5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonOnClick_no_cat" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Yoga"
        android:id="@+id/Cat7"
        android:layout_alignTop="@+id/cat1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/Cat9"
        android:layout_alignStart="@+id/Cat9"
        android:onClick="buttonOnClick_yoga" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Spinning"
        android:id="@+id/Cat8"
        android:layout_alignTop="@+id/cat2"
        android:layout_alignLeft="@+id/Cat7"
        android:layout_alignStart="@+id/Cat7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonOnClick_no_cat" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Running"
        android:id="@+id/Cat9"
        android:layout_alignTop="@+id/Cat3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonOnClick_no_cat" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Outdoors"
        android:id="@+id/Cat10"
        android:layout_alignTop="@+id/Cat4"
        android:layout_alignLeft="@+id/Cat9"
        android:layout_alignStart="@+id/Cat9"
        android:onClick="buttonOnClick_no_cat" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Pesas y Poleas"
        android:id="@+id/Cat11"
        android:layout_alignTop="@+id/Cat5"
        android:layout_alignLeft="@+id/Cat10"
        android:layout_alignStart="@+id/Cat10"
        android:onClick="buttonOnClick_no_cat" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Natación"
        android:id="@+id/Cat12"
        android:layout_alignTop="@+id/Cat6"
        android:layout_alignLeft="@+id/Cat11"
        android:layout_alignStart="@+id/Cat11"
        android:onClick="buttonOnClick_no_cat" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/user_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonOnClick3"
        android:src="@android:drawable/ic_menu_gallery" />
</RelativeLayout>
